<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({
  provider: {},
  internal: {id: 'map'}},
  function(){
  markers = handler.addMarkers(<%=raw @pindrop.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(12);
});
</script>
